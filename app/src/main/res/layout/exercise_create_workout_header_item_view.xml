<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/container"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="84.7dp"
	android:gravity="center_vertical">

	<ImageView
		android:id="@+id/exercisePhotoView"
		android:layout_width="78.6dp"
		android:layout_height="0dp"
		android:contentDescription="@null"
		android:scaleType="centerCrop"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/exerciseTitleView"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

	<TextView
		android:id="@+id/exerciseTitleView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="5dp"
		android:layout_marginEnd="5dp"
		android:fontFamily="@font/os_semi_bold"
		android:textColor="@color/black"
		android:textSize="17sp"
		android:text="@string/exercise"
		app:layout_constraintStart_toEndOf="@+id/exercisePhotoView"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="@dimen/custom_93dp"
	android:layout_height="@dimen/custom_83dp"
	android:layout_marginHorizontal="10dp"
	android:layout_marginVertical="5dp"
	android:background="@drawable/program_view_day_list_background">

	<TextView
		android:id="@+id/titleView"
		android:layout_width="@dimen/custom_38dp"
		android:layout_height="@dimen/custom_38dp"
		android:layout_marginTop="@dimen/custom_10dp"
		android:fontFamily="@font/os_bold"
		android:gravity="center"
		android:background="@drawable/program_view_day_list_title_background"
		android:textColor="@color/colorPrimary"
		android:textSize="@dimen/custom_21sp"
		android:text="A"
		tools:ignore="HardcodedText"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<ImageView
		android:id="@+id/otherIndicatorView"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/custom_6dp"
		android:adjustViewBounds="true"
		android:src="@drawable/icon_other"
		android:contentDescription="@null"
		app:layout_constraintStart_toStartOf="@id/titleView"
		app:layout_constraintEnd_toEndOf="@id/titleView"
		app:layout_constraintTop_toTopOf="@id/titleView"
		app:layout_constraintBottom_toBottomOf="@id/titleView"/>

	<TextView
		android:id="@+id/dayIndexView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/os_bold"
		android:gravity="center"
		android:textColor="@color/white"
		android:textSize="@dimen/custom_15sp"
		android:text="OTHER"
		tools:ignore="HardcodedText"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/titleView"
		app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@color/layout_background"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<include layout="@layout/toolbar_about"
		/>

	<ImageView
		android:id="@+id/imageViewLogoWhite"
		android:layout_width="0dp"
		android:layout_height="140dp"
		android:background="@color/white"
		android:contentDescription="@null"
		android:padding="25dp"
		android:scaleType="fitCenter"
		android:src="@drawable/logo_vector"
		app:layout_constraintBottom_toTopOf="@id/imageViewLogoText"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/toolbar" />

	<ImageView
		android:id="@+id/imageViewLogoText"
		android:layout_width="0dp"
		android:layout_height="40dp"
		android:background="@color/white"
		android:src="@drawable/logo_text"
		android:paddingStart="55dp"
		android:paddingEnd="55dp"
		android:paddingBottom="16dp"
		android:contentDescription="@null"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imageViewLogoWhite"
		app:layout_constraintBottom_toTopOf="@id/termsBtn"
		/>

	<TextView
		android:id="@+id/termsBtn"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="20dp"
		android:layout_marginEnd="16dp"
		android:textColor="@color/black"
		android:fontFamily="@font/os"
		android:textSize="22sp"
		android:text="@string/terms_of_service"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/imageViewLogoText" />

	<View
		android:id="@+id/dividerTerms"
		android:layout_width="0dp"
		android:layout_height="1dp"
		android:background="@color/black"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginTop="16dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/termsBtn"
		/>

	<TextView
		android:id="@+id/privacyPolicyBtn"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="20dp"
		android:layout_marginEnd="16dp"
		android:textColor="@color/black"
		android:fontFamily="@font/os"
		android:textSize="22sp"
		android:text="@string/privacy_policy_no_underline"
		android:textAlignment="textStart"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/dividerTerms"
		/>

	<View
		android:id="@+id/dividerPrivacy"
		android:layout_width="0dp"
		android:layout_height="1dp"
		android:background="@color/black"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginTop="16dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/privacyPolicyBtn"
		/>

	<TextView
		android:id="@+id/textViewApplicationVersionLabel"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="20dp"
		android:layout_marginEnd="16dp"
		android:textColor="@color/black"
		android:fontFamily="@font/os"
		android:textSize="22sp"
		android:text="@string/application_version"
		android:textAlignment="textStart"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/dividerPrivacy"
		/>

	<TextView
		android:id="@+id/textViewAppVersion"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="4dp"
		android:layout_marginEnd="16dp"
		android:fontFamily="@font/os_semi_bold"
		android:text="v1.0.0"
		android:textAlignment="textStart"
		android:textColor="@color/colorPrimary"
		android:textSize="22sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/textViewApplicationVersionLabel"
		/>

	<View
		android:id="@+id/dividerVersion"
		android:layout_width="0dp"
		android:layout_height="1dp"
		android:background="@color/black"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginTop="16dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/textViewAppVersion"
		/>





</androidx.constraintlayout.widget.ConstraintLayout>
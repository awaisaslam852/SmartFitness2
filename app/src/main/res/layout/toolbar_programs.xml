<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/toolbar"
	style="@style/TopBar">

	<TextView
		android:id="@+id/topBarTitleView"
		style="@style/TopBarTitle"
		android:text="@string/programs"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<ImageButton
		android:id="@+id/imageButtonBurger"
		style="@style/TopBarButton"
		android:layout_marginStart="@dimen/custom_8dp"
		android:contentDescription="@null"
		android:padding="@dimen/custom_8dp"
		android:src="@drawable/icon_burger"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
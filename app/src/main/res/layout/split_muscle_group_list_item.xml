<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:id="@+id/layoutSplitMuscleGroup">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">

		<ImageView
			android:id="@+id/imageViewSplitMuscleGroup"
			android:layout_width="58dp"
			android:layout_height="58dp"
			android:layout_marginStart="16dp"
			android:contentDescription="@null"
			android:elevation="8dp"
			android:src="@drawable/pic_chest"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/textViewSplitMuscleGroupName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:text="@string/chest"
			android:textColor="@color/white"
			android:textSize="20sp"
			android:background="@drawable/blue_stroke_rounded_button_background"
			android:backgroundTint="@color/colorPrimary"
			android:layout_marginStart="28dp"
			android:paddingStart="30dp"
			android:paddingEnd="8dp"
			app:layout_constraintStart_toStartOf="@id/imageViewSplitMuscleGroup"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginEnd="1.7dp">

	<androidx.cardview.widget.CardView
		android:id="@+id/container"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/exercise_category_list_item_height"
		android:minWidth="@dimen/exercise_category_list_item_height"
		android:layout_marginEnd="5dp"
		android:layout_marginBottom="8dp"
		app:cardCornerRadius="3.3dp"
		app:cardElevation="5dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="6dp"
			android:layout_gravity="center_horizontal">

			<ImageView
				android:id="@+id/iconView"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_marginBottom="4.7dp"
				android:contentDescription="@null"
				android:adjustViewBounds="true"
				android:src="@drawable/icon_favorite_category"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toTopOf="@id/topBarTitleView"/>

			<TextView
				android:id="@+id/topBarTitleView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/os"
				android:textColor="@color/black"
				android:textSize="@dimen/exercise_category_list_title_size"
				android:textAlignment="center"
				android:maxLines="1"
				android:text="@string/accessories"
				tools:ignore="SmallSp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
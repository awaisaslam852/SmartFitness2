<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--common view attributes-->
    <attr name="icon" format="reference" />
    <attr name="iconSelected" format="reference" />
    <attr name="description" format="string" />
    <attr name="title" format="string" />

    <declare-styleable name="SelectableThing">
        <attr name="icon" />
        <attr name="iconSelected" />
        <attr name="description" />
    </declare-styleable>
    <declare-styleable name="ProfileInfoItem">
        <attr name="icon" />
        <attr name="title" />
        <attr name="description" />
    </declare-styleable>

    <declare-styleable name="ButtonWithDrawable">
        <attr name="icon" />
        <attr name="title" />
        <attr name="buttonBackground" format="reference" />
    </declare-styleable>
    <declare-styleable name="CustomProgressView">
        <attr name="placeHolderColor" format="color"/>
        <attr name="startColor" format="color"/>
        <attr name="endColor" format="color"/>
		<attr name="startAngle" format="float"/>
        <attr name="circleWidth" format="dimension"/>
        <attr name="max" format="float"/>
        <attr name="progress" format="float"/>
    </declare-styleable>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/imageViewWaveToolbar"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:adjustViewBounds="true"
		android:scaleType="fitXY"
		android:src="@drawable/tb"
		android:contentDescription="@null"
		app:layout_constraintDimensionRatio="w,694:340"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

	<ImageButton
		android:id="@+id/imageButtonArrowBack"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:layout_marginTop="10dp"
		android:paddingHorizontal="5dp"
		android:paddingVertical="10dp"
		android:contentDescription="@null"
		android:elevation="2dp"
		android:src="@drawable/icon_arrow_start"
		android:background="@color/transparent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/imageViewLogo"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:contentDescription="@null"
		android:src="@drawable/logo_and_title"
		android:background="@color/transparent"
		app:layout_constraintHeight_percent="0.4"
		app:layout_constraintDimensionRatio="h,725:826"
		app:layout_constraintVertical_bias="0.2"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>